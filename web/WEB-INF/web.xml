<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>servlet.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AskServlet</servlet-name>
        <servlet-class>servlet.AskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostQuestionServlet</servlet-name>
        <servlet-class>servlet.postQuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingUpdateServlet</servlet-name>
        <servlet-class>servlet.SettingUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PubQListServlet</servlet-name>
        <servlet-class>servlet.PubQListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicQuestionServlet</servlet-name>
        <servlet-class>servlet.PublicQuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnswerServlet</servlet-name>
        <servlet-class>servlet.AnswerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrowseUserServlet</servlet-name>
        <servlet-class>servlet.BrowseUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileAskListServlet</servlet-name>
        <servlet-class>servlet.jsonQuery.ProfileAskListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>servlet.IndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginStatus.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AskServlet</servlet-name>
        <url-pattern>/ask/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostQuestionServlet</servlet-name>
        <url-pattern>/postQuestion.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingUpdateServlet</servlet-name>
        <url-pattern>/updateProfile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PubQListServlet</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicQuestionServlet</servlet-name>
        <url-pattern>/pq/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnswerServlet</servlet-name>
        <url-pattern>/postAnswer.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileAskListServlet</servlet-name>
        <url-pattern>/askList.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BrowseUserServlet</servlet-name>
        <url-pattern>/profile/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/indexInit</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoginCheck</filter-name>
        <filter-class>filter.LoginRequiredFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginCheck</filter-name>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/ask/*</url-pattern>
        <url-pattern>/postQuestion.do</url-pattern>
        <url-pattern>/postAnswer.do</url-pattern>
    </filter-mapping>

</web-app>